---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';

import PortfolioCard from '../components/PortfolioCard.astro';
import PhotoCard from '../components/PhotoCard.astro';

import brev from '../assets/images/brev.png';
import portræt1 from '../assets/images/portræt1.png';
import portræt2 from '../assets/images/portræt2.png';
import portræt3 from '../assets/images/portræt3.png';
import portræt4 from '../assets/images/portræt4.png';
import billede from '../assets/images/billede.png';
import kamera from '../assets/images/kamera.png';
import living from '../assets/images/living.png';
import kismet from '../assets/images/kismet.png';
import muusmann from '../assets/images/muusmann.png';
import foto1 from '../assets/images/foto1.png';
import foto2 from '../assets/images/foto2.png';
import foto4 from '../assets/images/foto4.png';
---

<MainLayout title="Anastasia Benedicte | Design & Visuel Identitet">

  <Header />

  <!-- HERO SECTION -->
  <section class="relative px-6 py-24 sm:py-32 min-h-[calc(100vh-80px)]">
    <div class="relative z-10 max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
      
      <!-- VENSTRE: tekst + billeder -->
      <div class="mx-auto max-w-prose text-center md:text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-snug">
          ANASTASIA <br />BENEDICTE
        </h1>

        <p class="mt-4 text-base sm:text-lg md:text-xl text-gray-700">
          Design & Visuel formidling
        </p>

        <p class="mt-8 text-gray-700 text-base sm:text-lg leading-relaxed">
          I en organisk tilgang skaber jeg visuelle fortællinger, der engagerer og inspirerer. I et sammenspil mellem form og funktion er det min ambition at skabe designløsninger, der ikke blot er æstetiske men også meningsfulde og effektive.
        </p>

        <div class="mt-12 flex justify-center md:justify-start items-end gap-6">
          <!-- Venstre billede med link -->
          <Link href="#portfolio-first-section">
            <div class="w-32 sm:w-40 md:w-48 h-auto rounded-md overflow-hidden transform transition-transform duration-300 hover:scale-105 -translate-y-6 cursor-pointer">
              <Image src={billede} alt="Billede" class="w-full h-full object-cover" />
            </div>
          </Link>

          <Link href="/" class="z-10">
            <Image src={brev} alt="Brev" class="w-36 sm:w-48 md:w-56 h-auto object-cover rounded-md transform transition-transform duration-300 hover:scale-105" />
          </Link>

          <Link href="#portfolio-photos">
            <Image src={kamera} alt="Kamera" class="w-32 sm:w-40 md:w-48 h-auto object-cover rounded-md transform transition-transform duration-300 hover:scale-105 -translate-y-6" />
          </Link>
        </div>
      </div>

      <!-- HØJRE: 2x2 portræt-grid -->
      <div class="mx-auto w-full max-w-sm md:max-w-md">
        <div class="grid grid-cols-2 border border-gray-300">
          <div class="w-full aspect-square overflow-hidden border-r border-b border-gray-300 group">
            <Image src={portræt1} alt="Portræt1" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:-translate-y-2" />
          </div>
          <div class="w-full aspect-square overflow-hidden border-b border-gray-300 group">
            <Image src={portræt2} alt="Portræt2" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:translate-y-2" />
          </div>
          <div class="w-full aspect-square overflow-hidden border-r border-gray-300 group">
            <Image src={portræt3} alt="Portræt3" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:-translate-x-2" />
          </div>
          <div class="w-full aspect-square overflow-hidden group">
            <Image src={portræt4} alt="Portræt4" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:translate-x-2" />
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Grå linje over portfolio -->
  <div class="border-t border-gray-300 my-12"></div>

  <!-- PORTFOLIO -->
  <section class="relative mx-auto max-w-7xl px-6 lg:px-8 mt-12">
    <div class="relative z-10">
      <h2 class="text-4xl tracking-tight text-gray-900 text-center sm:text-5xl mb-12">PORTFOLIO</h2>

      <!-- Første sektion -->
      <div id="portfolio-first-section" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 pb-16">
        <PortfolioCard href="https://www.instagram.com/livingtrendoglivsstil/" date="Jan 16, 2023" tag="Salg og SoMe" title="LIVING TREND & LIVSSTIL" imgSrc={living} />
        <PortfolioCard href="https://www.instagram.com/kea_kismet_eksamen/" date="Mar 10, 2025" tag="MMD" title="KISMET CAFE - REDESIGN" imgSrc={kismet} />
        <PortfolioCard href="https://www.instagram.com/muusmannforlag/" date="Aug 12, 2025" tag="SoMe-ansvarlig" title="MUUSMANN FORLAG" imgSrc={muusmann} />
      </div>

      <!-- Anden sektion (billeder) -->
      <div id="portfolio-photos" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mt-12 pb-20">
        <PhotoCard date="Canon AF35ML" tag="Film 2302/3302" imgSrc={foto1} alt="Foto1" />
        <PhotoCard date="Canon AF35ML" tag="Film 2302/3302" imgSrc={foto2} alt="Foto2" />
        <PhotoCard date="Canon AF35ML" tag="Film 2302/3302" imgSrc={foto4} alt="Foto4" />
      </div>
    </div>
  </section>

  <Footer />

</MainLayout>

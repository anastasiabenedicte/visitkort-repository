---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from 'astro:assets';
import papirBg from '../assets/images/papir.png';
---
<MainLayout title="Titel">
  <header>
    <Header></Header>
  </header>
  <main
    class="min-h-screen flex items-center justify-center bg-repeat bg-center"
    style={`background-image: url('${papirBg.src}'); image-rendering: auto;`}
  >
    <div class="container px-4 text-center max-w-lg md:max-w-2xl bg-white/80 rounded-lg shadow-lg">
      <h1 class="text-2xl md:text-4xl font-bold">Hej verden</h1>
      <p class="mt-2 text-gray-700 md:text-lg">Her starter dit Astro skelet</p>
    </div>
  </main>
  <footer>
    <Footer></Footer>
  </footer>
</MainLayout>

---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from 'astro:assets';
import brev from "../assets/images/brev.png";
import laas from '../assets/images/laas.png';
import billede from '../assets/images/billede.png';
import kamera from '../assets/images/kamera.png';
---

<MainLayout title="Titel">

  <article class="bg-black min-h-screen flex flex-col items-center justify-center font-cormorant-700 text-white">

    <!-- Brev med lås -->
    <div class="relative">
      <Image 
        src={brev} 
        alt="brev" 
        class="w-[300px] sm:w-[400px] md:w-[500px] lg:w-[600px] transform"
      />

      <a href="/brev" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 group">
        <Image 
          src={laas} 
          alt="låsen" 
          class="max-w-[100px] md:max-w-[200px] animate-hop transition-transform duration-200 group-hover:animate-none"
        />
      </a>
    </div>

    <!-- Navn og titel -->
    <div class="mt-12 md:mt-10 text-center">
      <p class="mt-4 text-base sm:text-lg md:text-xl font-cormorant-300 text-gray-200">
        Anastasia Benedicte / Design & Visuel formidling
      </p>
    </div>

    <!-- Kontakt-links -->
    <div class="mt-8 flex flex-col sm:flex-row gap-4 sm:gap-8 justify-center text-center text-sm sm:text-base font-cormorant-300">
      <a href="mailto:anni0010@stud.ek.dk" class="hover:text-gray-400 transition">Kontakt</a>
      <a href="https://www.instagram.com/anastasiabenedicte/" target="_blank" rel="noopener noreferrer" class="hover:text-gray-400 transition">Instagram</a>
      <a href="https://www.linkedin.com/in/anastasianielsen/" target="_blank" rel="noopener noreferrer" class="hover:text-gray-400 transition">LinkedIn</a>
    </div>

  </article>

  <style>
    @keyframes hop {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }
    .animate-hop {
      animation: hop 0.8s infinite ease-in-out;
    }
    .group:hover .animate-hop {
      animation: none;
    }
  </style>

</MainLayout>
